@model WebApplication3.Models.Complain

@{
    ViewData["Title"] = "ComplainEdit";
    Layout = "~/Views/Shared/resident.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edit Complain</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ComplainEdit" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Cid" />

                        <div class="form-floating mb-3">
                            <input asp-for="Details" class="form-control" placeholder="Enter Complain Details" required />
                            <label asp-for="Details">Complain Details</label>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Personname" class="form-control" placeholder="Enter Your Name" required />
                            <label asp-for="Personname">Your Name</label>
                            <span asp-validation-for="Personname" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Status" class="form-select" required>
                                <option value="" disabled selected>Select Status</option>
                                <option>Pending</option>
                                <option>Resolved</option>
                            </select>
                            <label asp-for="Status">Status</label>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="date" asp-for="Cdate" class="form-control" required />
                            <label asp-for="Cdate">Complain Date</label>
                            <span asp-validation-for="Cdate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="date" asp-for="Rdate" class="form-control" required />
                            <label asp-for="Rdate">Resolution Date</label>
                            <span asp-validation-for="Rdate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Type" class="form-select" required>
                                <option value="" disabled selected>Select Complain Type</option>
                                <option>Maintenance</option>
                                <option>Noise</option>
                                <option>Security</option>
                                <option>Other</option>
                            </select>
                            <label asp-for="Type">Complain Type</label>
                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f0f2f5;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: none;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input:focus,
    .form-floating select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>
