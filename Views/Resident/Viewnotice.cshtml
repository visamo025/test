@model IEnumerable<WebApplication3.Models.Notice>

@{
    ViewData["Title"] = "View Notices";
    Layout = "~/Views/Shared/resident.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white">Notices</h3>

    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Type)</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Date:</strong> @Html.DisplayFor(modelItem => item.Ndate)</p>
                        <p><strong>Details:</strong> @Html.DisplayFor(modelItem => item.Details)</p>

                    </div>

                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        background-color: rgb(21 38 58);
        padding: 20px;
        border-radius: 8px;
        color: white;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        font-weight: bold;
        text-align: center;
    }

    .card-body {
        background-color: #f8f9fa;
        color: #333;
        padding: 15px;
    }

    .btn {
        border-radius: 5px;
        font-size: 14px;
    }

    .text-white {
        color: white;
    }
</style>
