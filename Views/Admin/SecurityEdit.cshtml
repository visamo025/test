@model WebApplication3.Models.Users

@{
    ViewData["Title"] = "SecurityEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Edit Security</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SecurityEdit" enctype="multipart/form-data" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden input for Uid -->
                        <input type="hidden" asp-for="Uid" />

                        <!-- Name -->
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Enter Name" required />
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Contactno -->
                        <div class="form-floating mb-3">
                            <input asp-for="Contactno" class="form-control" placeholder="Enter Contact No" required />
                            <label asp-for="Contactno">Contact No</label>
                            <span asp-validation-for="Contactno" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" required />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" required />
                            <label asp-for="Password">password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Photo -->
                        <div class="mb-3">
                            <label asp-for="Photo" class="form-label">Photo</label>
                            <input type="hidden" asp-for="Photo" />

                            <div class="mb-3">
                                <img class="rounded-circle border"
                                     src="@(string.IsNullOrEmpty(Model.Photo) ? "/images/default-user.png" : Url.Content("~/uploads/" + Model.Photo))"
                                     width="80" height="80" alt="Resident Photo" />
                            </div>

                            <input type="file" name="file" class="form-control" />
                            <span class="text-danger small"></span>
                        </div>
                        <!-- Save Button -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Custom Styles */
    body {
        background-color: #111c2d;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input:focus,
    .form-floating select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
