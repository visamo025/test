
@{
    ViewData["Title"] = "AdminDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Admin Panel - Cards -->
<div class="container mt-4">
    <div class="row g-4 justify-content-center">
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="~/admin/ResidentView" class="admin-card bg-primary-subtle text-primary">
                <iconify-icon icon="solar:user-id-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["resident"]</h1>
                <p>Resident</p>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="~/admin/SecretaryView" class="admin-card bg-warning-subtle text-warning">
                <iconify-icon icon="solar:briefcase-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Secretary"]</h1>
                <p>Secretary</p>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="~/admin/SecurityView" class="admin-card bg-info-subtle text-info">
                <iconify-icon icon="solar:shield-check-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Security"]</h1>
                <p>Security</p>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="~/admin/ComplainView" class="admin-card bg-danger-subtle text-danger">
                <iconify-icon icon="solar:chat-round-warning-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["complain"]</h1>
                <p>Complain</p>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="~/admin/Event" class="admin-card bg-success-subtle text-success">
                <iconify-icon icon="solar:calendar-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Event"]</h1>
                <p>Event</p>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
            <a href="#" class="admin-card bg-info-subtle text-info">
                <iconify-icon icon="solar:document-text-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Notice"]</h1>
                <p>Notice</p>
            </a>
        </div>
    </div>
</div>

<!-- Dashboard Notices & Events -->
<div class="dashboard-container mt-5">
    <div class="card">
        <div class="card-title">📢 Latest Notices</div>
        <ul class="latest-list">
            @foreach (var notice in ViewData["LatestNotices"] as List<WebApplication3.Models.Notice>)
            {
                <li><a href="#">@notice.Details - @notice.Ndate.ToString("dd MMM yyyy")</a></li>
            }
        </ul>
    </div>

    <div class="card">
        <div class="card-title">📅 Latest Events</div>
        <ul class="latest-list">
            @foreach (var eventItem in ViewData["LatestEvents"] as List<WebApplication3.Models.Event>)
            {
                <li><a href="#">@eventItem.Eventname - @eventItem.Bookdate.ToString("dd MMM yyyy")</a></li>
            }
        </ul>
    </div>
</div>

<!-- Styles -->
<style>
    .admin-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px;
        text-align: center;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        text-decoration: none;
        height: 150px;
    }

        .admin-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        }

    .card-icon {
        font-size: 35px;
        margin-bottom: 8px;
    }

    .admin-card h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .admin-card p {
        font-weight: 600;
        font-size: 14px;
        margin: 0;
    }

    /* Dashboard Notices & Events */
    .dashboard-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        justify-content: space-between;
    }

    .card {
        background-color: var(--bs-body-bg);
        color: var(--bs-body-color);
        border: 2px solid var(--bs-primary);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        width: 100%;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        border-bottom: 2px solid var(--bs-primary);
        padding-bottom: 5px;
        margin-bottom: 10px;
        text-align: center;
    }

    .latest-list {
        list-style: none;
        padding: 0;
    }

        .latest-list li {
            background-color: rgba(0, 0, 0, 0.1);
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 8px;
            transition: background 0.3s;
        }

            .latest-list li:hover {
                background-color: var(--bs-primary);
                color: white;
            }

            .latest-list li a {
                color: inherit;
                text-decoration: none;
                font-weight: 500;
            }
</style>

<!-- Iconify Script -->
<script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>




<!-- Light/Dark Mode Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        let sunButton = document.querySelector(".light-layout");
        let moonButton = document.querySelector(".dark-layout");

        // Function to toggle mode
        function toggleMode() {
            document.body.classList.toggle("light-mode");
            let isLightMode = document.body.classList.contains("light-mode");

            // Show/Hide Icons
            sunButton.style.display = isLightMode ? "none" : "flex";
            moonButton.style.display = isLightMode ? "flex" : "none";
        }

        // Attach Click Events
        sunButton.addEventListener("click", toggleMode);
        moonButton.addEventListener("click", toggleMode);
    });
</script>

<!-- Iconify Script -->
<script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>


