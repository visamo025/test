@model WebApplication3.Models.Users

@{
    ViewData["Title"] = "SecretaryCreate";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Add Secretary</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SecretaryCreate" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Flatno" class="form-control" placeholder="Flat No" />
                                    <label asp-for="Flatno">Flat No</label>
                                    <span asp-validation-for="Flatno" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Wingno" class="form-control">
                                        <option>A</option>
                                        <option>B</option>
                                        <option>C</option>
                                        <option>D</option>

                                    </select>
                                    <label asp-for="Wingno">Wing No</label>
                                    <span asp-validation-for="Wingno" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mt-3">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <label asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mt-3">
                            <input asp-for="Contactno" class="form-control" placeholder="Contact No" />
                            <label asp-for="Contactno">Contact No</label>
                            <span asp-validation-for="Contactno" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mt-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" required />
                            <label asp-for="Password">password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mt-3">
                            <label asp-for="Photo" class="form-label">Photo</label>
                            <input type="file" name="file" class="form-control" />
                            
                        </div>

                       

                        <div class="d-flex justify-content-between mt-4">
                          
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Unique Styling */
    body {
        background-color: #111c2d;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input:focus,
    .form-floating select:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-outline-secondary {
        transition: color 0.3s ease, background-color 0.3s ease;
    }

    .btn-outline-secondary:hover {
        color: white;
        background-color: #6c757d;
    }
</style>
