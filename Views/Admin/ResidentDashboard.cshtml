
@{
    ViewData["Title"] = "ResidentDashboard";
    Layout = "~/Views/Shared/resident.cshtml";
}

<!-- Resident Panel - Cards -->
<div class="container mt-4">
    <div class="row g-4 justify-content-center">
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewComplain" class="resident-card bg-primary-subtle text-primary">
                <iconify-icon icon="solar:document-text-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["complain"]</h1>
                <p>Complain</p>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewEvent" class="resident-card bg-warning-subtle text-warning">
                <iconify-icon icon="solar:calendar-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Event"]</h1>
                <p>Event</p>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewGatepass" class="resident-card bg-info-subtle text-info">
                <iconify-icon icon="solar:mailbox-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Gatepass"]</h1>
                <p>Gatepass</p>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewMaintenance" class="resident-card bg-danger-subtle text-danger">
                <iconify-icon icon="solar:document-text-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Maintance"]</h1>
                <p>Maintenance</p>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewNotice" class="resident-card bg-success-subtle text-success">
                <iconify-icon icon="solar:document-text-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Notice"]</h1>
                <p>Notice</p>
            </a>
        </div>
        <div class="col-6 col-md-3 col-lg-2">
            <a href="~/Resident/ViewService" class="resident-card bg-info-subtle text-info">
                <iconify-icon icon="solar:document-text-bold" class="card-icon"></iconify-icon>
                <h1>@ViewData["Service"]</h1>
                <p>Service</p>
            </a>
        </div>
    </div>
</div>

<!-- Dashboard Notices -->
<div class="container mt-5">
    <div class="card">
        <div class="card-title">📢 Latest Notices</div>
        <ul class="latest-list">
            @foreach (var notice in ViewData["LatestNotices"] as List<WebApplication3.Models.Notice>)
            {
                <li><a href="#">@notice.Details - @notice.Ndate.ToString("dd MMM yyyy")</a></li>
            }
        </ul>
    </div>
</div>
<div class="container mt-5">
    <div class="card">
        <div class="card-title">📢 Latest gatepass</div>
        <ul class="latest-list">
            @foreach (var gatepass in ViewData["latestgatepass"] as List<WebApplication3.Models.Gatepass>)
            {
                <li><a href="#">@gatepass.Visitorname - @gatepass.Date.ToString("dd MMM yyyy")</a></li>
            }
        </ul>
    </div>
</div>


<!-- Styles -->
<style>
    .resident-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px;
        text-align: center;
        border-radius: 12px;
        box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        text-decoration: none;
        height: 150px;
    }

    .card-icon {
        font-size: 35px;
        margin-bottom: 5px;
    }

    .resident-card h1 {
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .resident-card p {
        font-weight: 600;
        font-size: 14px;
        margin: 0;
    }

    .resident-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.25);
    }

    /* Dashboard Notices */
    .container .card {
        background-color: var(--bs-body-bg);
        color: var(--bs-body-color);
        border: 2px solid var(--bs-primary);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        border-bottom: 2px solid var(--bs-primary);
        padding-bottom: 5px;
        margin-bottom: 10px;
        text-align: center;
    }

    .latest-list {
        list-style: none;
        padding: 0;
    }

        .latest-list li {
            background-color: rgba(0, 0, 0, 0.05);
            padding: 8px;
            margin-bottom: 4px;
            border-radius: 8px;
            transition: background 0.3s;
        }

            .latest-list li:hover {
                background-color: var(--bs-primary);
                color: white;
            }

            .latest-list li a {
                color: inherit;
                text-decoration: none;
                font-weight: 500;
            }
</style>

<!-- Light/Dark Mode Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        let sunButton = document.querySelector(".light-layout");
        let moonButton = document.querySelector(".dark-layout");

        function toggleMode() {
            document.body.classList.toggle("light-mode");
            let isLightMode = document.body.classList.contains("light-mode");

            sunButton.style.display = isLightMode ? "none" : "flex";
            moonButton.style.display = isLightMode ? "flex" : "none";
        }

        sunButton.addEventListener("click", toggleMode);
        moonButton.addEventListener("click", toggleMode);
    });
</script>

<!-- Iconify Script -->
<script src="https://code.iconify.design/3/3.1.1/iconify.min.js"></script>
